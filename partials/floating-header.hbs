<div class="floating-header">
    <div class="floating-header-logo">
        <a href="{{@blog.url}}">
            {{#if @blog.icon}}
                <img src="{{@blog.icon}}" alt="{{@blog.title}} icon" />
            {{/if}}
            <span>{{@blog.title}}</span>
        </a>
    </div>
    <span class="floating-header-divider">&mdash;</span>
    <div class="floating-header-title">{{title}}</div>
    <div class="floating-header-share">
        <div class="floating-header-share-label">Share this {{> "icons/point"}}</div>
        <a class="floating-header-share-tw" data-source="https://slackbutton.herokuapp.com/embed"
            href="https://slackbutton.herokuapp.com/post/new" data-url={{url absolute="true"}}
            onclick="window.open(this.href, 'share-slack', 'width=550,height=535');return false;">
            {{> "icons/twitter"}}
        </a>
        <a class="floating-header-share-fb" href="mailto:?subject={{encode title}}&body={{url absolute="true"}}"
            >
            {{> "icons/facebook"}}
        </a>
    </div>
    <progress class="progress" value="0">
        <div class="progress-container">
            <span class="progress-bar"></span>
        </div>
    </progress>
</div>
