<article class="post-card {{post_class}}{{#unless feature_image}} no-image{{/unless}} post-jumbo">
    {{#if feature_image}}
        <a class="post-card-image-link">
            <div class="post-card-image" style="background-image: url({{feature_image}})"></div>
        </a>
    {{/if}}
    <div class="post-card-content">
        <a class="post-card-content-link">
            <header class="post-card-header">
                <h2 class="post-card-title">{{title}}</h2>
            </header>
            <section class="post-card-excerpt">
                <p>{{content}}</p>
            </section>
        </a>
        <footer class="post-card-meta" style="justify-content: space-evenly;">
            <a href="#subscribe">Request a Demo</a>
            <a href="/tag/case-studies">Read Case Studies</a>
        </footer>
    </div>
</article>

